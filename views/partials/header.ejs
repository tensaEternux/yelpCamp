<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>
		
		<!-- navbar is added to header.ejs so that it can be seen in each page -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom:20px;">
			<!-- navbar-header is not necessary -->
			<div class="navbar-header">
				<a class="navbar-brand" href="/">YelpCamp</a>		
			</div>
			<div class="collapse navbar-collapse">
				<!-- ml-auto for right and mr-auto for left side of navbar -->
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link" href="/campgrounds">Campgrounds</a></li>
				</ul>
				<ul class="navbar-nav ml-auto">
					<% if(!currentUser){ %>
						<li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
						<li class="nav-item"><a class="nav-link" href="/register">Sign Up</a></li>
					<% } else { %>
						<li class="nav-item"><a class="nav-link" href="#">Signed In As: <%= currentUser.username %></a></li>
						<li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
					<% } %>
					</ul>
			</div>
		</nav>
		
		<div class="container">
			<% if(error && error.length > 0) { %>
				<div class="alert alert-danger" role="alert">
					<%= error %>
				</div>
			<% } %>
			<% if(success && success.length > 0) { %>
				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% } %>
			<% if(info && info.length > 0) { %>
				<div class="alert alert-info" role="alert">
					<%= info %>
				</div>
			<% } %>
		</div>